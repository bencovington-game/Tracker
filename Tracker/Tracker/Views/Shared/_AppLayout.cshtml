<!DOCTYPE html>
<html lang="en">

@*---------------------------------------------------------------------------------------------------------------
    <HEADING>
---------------------------------------------------------------------------------------------------------------*@
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Tracker</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/fontawesome.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/fontawesome.min.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/solid.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/solid.min.css" />
    <link rel="stylesheet" href="~/css/site.css"/>
    <link rel="stylesheet" href="~/css/AppStyles.css"/>
</head>

@{ 
    string sideBar = "bg-info";
    string sideTab = "bg-info";
    string sideBtn = "bg-info";
    string sideBarTxt = "text-light";
    string sideBtnTxt = "text-white";
}


@*---------------------------------------------------------------------------------------------------------------
    <BODY>
---------------------------------------------------------------------------------------------------------------*@
<body>
    <!-- Bootstrap row -->
    <div class="row no-gutters" id="body-row">
        <!-- Sidebar -->
        <div id="sidebar-container" 
             class="sidebar-expanded d-none d-md-block @sideBar" 
             @*style="box-shadow: 0ch -1ch 2ch grey; z-index:1;"*@
             >

            <!-- d-* hiddens the Sidebar in smaller devices. Its items can be kept on the Navbar 'Menu' -->
            <!-- Bootstrap List Group -->
            <ul class="list-group">

                <a href="#" class="@sideBtn list-group-item list-group-item-action @sideBtnTxt">
                    <div class="d-flex w-100 justify-content-start align-items-center">
                        <span class="fa fa-scroll fa-fw mr-3"></span>
                        <span class="menu-collapsed">Tracker</span>
                    </div>
                </a>

                <!-- Separator with title -->
                <li class="list-group-item sidebar-separator-title @sideBarTxt d-flex align-items-center menu-collapsed @sideTab">
                    <small>MAIN MENU</small>
                </li>
                <!-- /END Separator -->

                <a href="#" class="@sideBtn list-group-item list-group-item-action @sideBtnTxt">
                    <div class="d-flex w-100 justify-content-start align-items-center">
                        <span class="fa fa-plus-circle fa-fw mr-3"></span>
                        <span class="menu-collapsed">Create</span>
                    </div>
                </a>

                <!-- Menu with submenu -->
                <a href="#submenu1" data-toggle="collapse" aria-expanded="false" class="@sideBtn list-group-item list-group-item-action flex-column align-items-start @sideBtnTxt">
                    <div class="d-flex w-100 justify-content-start align-items-center">
                        <span class="fa fa-tachometer-alt fa-fw mr-3"></span>
                        <span class="menu-collapsed">Dashboard</span>
                        @*<span class="submenu-icon ml-auto"></span>*@
                    </div>
                </a>

                <!-- Submenu content -->
                <div id='submenu1' class="collapse sidebar-submenu @sideBtnTxt">
                    <a href="#" class="list-group-item list-group-item-action @sideBtn @sideBtnTxt">
                        <span class="menu-collapsed">Chahgag</span>
                    </a>
                    <a href="#" class="list-group-item list-group-item-action @sideBtn @sideBtnTxt">
                        <span class="menu-collapsed">Reports</span>
                    </a>
                    <a href="#" class="list-group-item list-group-item-action @sideBtn @sideBtnTxt">
                        <span class="menu-collapsed">Tables</span>
                    </a>
                </div>

                <a href="#" class="@sideBtn list-group-item list-group-item-action @sideBtnTxt">
                    <div class="d-flex w-100 justify-content-start align-items-center">
                        <span class="fa fa-tasks fa-fw mr-3"></span>
                        <span class="menu-collapsed">Tasks</span>
                    </div>
                </a>

                <a href="#" class="@sideBtn list-group-item list-group-item-action @sideBtnTxt">
                    <div class="d-flex w-100 justify-content-start align-items-center">
                        <span class="fa fa-calendar fa-fw mr-3"></span>
                        <span class="menu-collapsed">Calendar</span>
                    </div>
                </a>

                <a href="#" class="@sideBtn list-group-item list-group-item-action @sideBtnTxt">
                    <div class="d-flex w-100 justify-content-start align-items-center">
                        <span class="fa fa-chart-bar fa-fw mr-3"></span>
                        <span class="menu-collapsed">Metrics</span>
                    </div>
                </a>

                <!-- Separator with title -->
                <li class="list-group-item sidebar-separator-title @sideBarTxt d-flex align-items-center menu-collapsed @sideTab">
                    <small>OPTIONS</small>
                </li>
                <!-- /END Separator -->

                <a href="#" class="@sideBtn list-group-item list-group-item-action @sideBtnTxt">
                    <div class="d-flex w-100 justify-content-start align-items-center">
                        <span class="fa fa-bell fa-fw mr-3"></span>
                        <span class="menu-collapsed">Notifications <span class="badge badge-pill badge-danger ml-2">5</span></span>
                    </div>
                </a>

                <a href="#" class="@sideBtn list-group-item list-group-item-action @sideBtnTxt">
                    <div class="d-flex w-100 justify-content-start align-items-center">
                        <span class="fa fa-cog fa-fw mr-3"></span>
                        <span class="menu-collapsed">Settings</span>
                    </div>
                </a>

                <a href="#" class="@sideBtn list-group-item list-group-item-action @sideBtnTxt">
                    <div class="d-flex w-100 justify-content-start align-items-center">
                        <span class="fa fa-question fa-fw mr-3"></span>
                        <span class="menu-collapsed">Help</span>
                    </div>
                </a>

                <a href="#submenu2" data-toggle="collapse" aria-expanded="false" class="@sideBtn list-group-item list-group-item-action flex-column align-items-start @sideBtnTxt">
                    <div class="d-flex w-100 justify-content-start align-items-center">
                        <span class="fa fa-user fa-fw mr-3"></span>
                        <span class="menu-collapsed">Profile</span>
                        @*<span class="submenu-icon ml-auto"></span>*@
                    </div>
                </a>

                <!-- Submenu content -->
                <div id='submenu2' class="collapse sidebar-submenu @sideBtnTxt">
                    <a href="#" class="list-group-item list-group-item-action @sideBtn @sideBtnTxt">
                        <span class="menu-collapsed">Settings</span>
                    </a>
                    <a href="#" class="list-group-item list-group-item-action @sideBtn @sideBtnTxt">
                        <span class="menu-collapsed">Password</span>
                    </a>
                </div>

                <!-- Separator without title -->
                <li class="list-group-item sidebar-separator menu-collapsed @sideBar"></li>
                <!-- /END Separator -->

                <a href="#top" data-toggle="sidebar-colapse" class="@sideBtn list-group-item list-group-item-action d-flex align-items-center @sideBtnTxt">
                    <div class="d-flex w-100 justify-content-start align-items-center">
                        <span id="collapse-icon" class="fa fa-2x mr-3"></span>
                        <span id="collapse-text" class="menu-collapsed">Collapse</span>
                    </div>
                </a>

            </ul><!-- List Group END-->

        </div><!-- sidebar-container END -->

        <div class="col bg-danger">
            <!-- Bootstrap NavBar -->
            <nav class="navbar navbar-expand-md navbar-dark bg-secondary d-block d-md-none d-flex">

                <a class="navbar-brand bg-primary"
                   href="#">
                    <span class="fa fa-scroll fa-fw mr-3"
                          width="30"
                          height="30">
                    </span>
                    <span @*class="menu-collapsed"*@>Tracker</span>
                </a>


                <button class="navbar-toggler navbar-toggler-right bg-danger"
                        type="button"
                        data-toggle="collapse"
                        data-target="#navbarNavDropdown"
                        aria-controls="navbarNavDropdown"
                        aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>



                <div class="collapse navbar-collapse" id="navbarNavDropdown">
                    <ul class="navbar-nav ml-auto @sideBarTxt">

                        @*<li class="nav-item d-none d-md-block my-auto">
                    <a class="fa fa-home fa-fw mr-3 nav-link" href="#top"></a>
                </li>*@

                        @*<li class="nav-item d-none d-md-block my-auto">
                    <a class="fa fa-question-circle fa-fw mr-3 nav-link" href="#top"></a>
                </li>

                <li class="nav-item d-none d-md-block my-auto">
                    <a class="fa fa-user-circle fa-fw mr-3 fa-2x nav-link" href="#top">
                        <span class="sr-only">(current)</span>
                    </a>
                </li>*@

                        <!-- This menu is hidden in bigger devices with d-sm-none. The sidebar isn't proper for smaller screens imo, so this dropdown menu can keep all the useful sidebar items exclusively for smaller screens  ->
            <li class="nav-item dropdown d-sm-block d-md-none">
                <a class="nav-link dropdown-toggle"
                   href="#"
                   id="smallerscreenmenu"
                   data-toggle="dropdown"
                   aria-haspopup="true"
                   aria-expanded="false">
                    Menu
                </a>

                <div class="dropdown-menu" aria-labelledby="smallerscreenmenu">
                    <a class="dropdown-item" href="#top">Create</a>
                    <a class="dropdown-item" href="#top">Dashboard</a>
                    <a class="dropdown-item" href="#top">Tasks</a>
                    <a class="dropdown-item" href="#top">Calendar</a>
                    <a class="dropdown-item" href="#top">Etc ...</a>
                </div>

            </li><!-- Smaller devices menu END -->


                        <li class="nav-item d-sm-block d-md-none">
                            <div class="d-flex w-100 justify-content-start align-items-center">
                                <a class="fa fa-plus-circle fa-fw mr-3 nav-link" href="#top"></a>
                                <a class="nav-link" href="#top">Create</a>
                            </div>
                        </li>

                        <li class="nav-item d-sm-block d-md-none">
                            <div class="d-flex w-100 justify-content-start align-items-center">
                                <a class="fa fa-tachometer-alt fa-fw mr-3 nav-link" href="#top"></a>
                                <a class="nav-link" href="#top">Dashboard</a>
                            </div>
                        </li>

                        <li class="nav-item d-sm-block d-md-none">
                            <div class="d-flex w-100 justify-content-start align-items-center">
                                <a class="fa fa-tasks fa-fw mr-3 nav-link" href="#top"></a>
                                <a class="nav-link" href="#top">Tasks</a>
                            </div>
                        </li>

                        <li class="nav-item d-sm-block d-md-none">
                            <div class="d-flex w-100 justify-content-start align-items-center">
                                <a class="fa fa-calendar fa-fw mr-3 nav-link" href="#top"></a>
                                <a class="nav-link" href="#top">Calendar</a>
                            </div>
                        </li>

                        <li class="nav-item d-sm-block d-md-none">
                            <div class="d-flex w-100 justify-content-start align-items-center">
                                <a class="fa fa-chart-bar fa-fw mr-3 nav-link" href="#top"></a>
                                <a class="nav-link" href="#top">Metrics</a>
                            </div>
                        </li>

                        <li class="nav-item d-sm-block d-md-none">
                            <div class="d-flex w-100 justify-content-start align-items-center">
                                <a class="fa fa-bell fa-fw mr-3 nav-link" href="#top"></a>
                                <a class="nav-link" href="#top">Notifications</a>
                            </div>
                        </li>

                        <li class="nav-item d-sm-block d-md-none">
                            <div class="d-flex w-100 justify-content-start align-items-center">
                                <a class="fa fa-cog fa-fw mr-3 nav-link" href="#top"></a>
                                <a class="nav-link" href="#top">Settings</a>
                            </div>
                        </li>

                        @*<li class="nav-item d-sm-block d-md-none">
                    <div class="d-flex w-100 justify-content-start align-items-center">
                        <a class="fa fa-home fa-fw mr-3 nav-link" href="#top"></a>
                        <a class="nav-link" href="#top">Home</a>
                    </div>
                </li>*@

                        <li class="nav-item d-sm-block d-md-none">
                            <div class="d-flex w-100 justify-content-start align-items-center">
                                <a class="fa fa-question-circle fa-fw mr-3 nav-link" href="#top"></a>
                                <a class="nav-link" href="#top">Help</a>
                            </div>
                        </li>

                        <li class="nav-item d-sm-block d-md-none">
                            <div class="d-flex w-100 justify-content-start align-items-center">
                                <a class="fa fa-user-circle fa-fw mr-3 nav-link" href="#top"></a>
                                <a class="nav-link" href="#top">Profile</a>
                            </div>
                        </li>

                    </ul>
                </div>
            </nav><!-- NavBar END -->

            <!-- MAIN -->
            <main role="main" class="bg-light h-100">
                @RenderBody()
            </main>

            @*
                <div class="col bg-warning mx-0 px-0 h-100">

                    <div class="container bg-success mx-0 px-0 h-100">
                        <main role="main" class="bg-primary">
                            @RenderBody()
                        </main>

                    </div>

                    <!--
                    <h1 class="display-4">Collapsing Sidebar Menu</h1>
                    <div class="card">
                        <h5 class="card-header font-weight-light">Requirements</h5>
                        <div class="card-body">
                            <ul>
                                <li>JQuery</li>
                                <li>Bootstrap 4.3</li>
                                <li>FontAwesome</li>
                            </ul>
                        </div>
                    </div>
                    -->

                </div><!-- Main Col END -->
            *@

        </div>

    </div><!-- body-row END -->


 @*---------------------------------------------------------------------------------------------------------------
           <SCRIPTS>
 ---------------------------------------------------------------------------------------------------------------*@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/AppScript.js"></script>
    @RenderSection("Scripts", required: false)

</body>

</html>
